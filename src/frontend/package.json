{
  "name": "maze-frontend",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder --mac --linux --win"
  },
  "build": {
    "appId": "com.maze.frontend",
    "mac": {
      "target": ["dmg", "zip"]
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Utility"
    },
    "win": {
      "target": ["nsis", "zip"]
    }
  },
  "devDependencies": {
    "electron": "^32.1.0",
    "electron-builder": "^24.13.3"
  }
}
